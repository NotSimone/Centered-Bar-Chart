        {
            "displayName": "Measure Data",
            "name": "measure",
            "kind": "Measure",
            "requiredTypes": [
                {
                    "numeric": true
                }
            ]
        },
        {
            "displayName": "Target Values",
            "name": "target",
            "kind": "Measure",
            "requiredTypes": [
                {
                    "numeric": true
                }
            ]
        },
        {
            "displayName": "Buckets",
            "name": "bucket",
            "kind": "Grouping"
        }
