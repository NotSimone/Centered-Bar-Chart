                {
                    "measure": { "max": 1 },
                    "target": { "max": 1 },
                    "bucket": { "max": 1 }
                }
            ],
            "categorical": {
                "categories": {
                    "for": { "in": "bucket"}
                },
                "values": {
                    "group": {
                        "by": "grouping",
                        "select": [
                            { "bind": { "to": "measure" } },
                            { "bind": { "to": "target" } }
                        ]
                    }
                }
            }
        }
    ],
