{
    "dataRoles": [
        {
            "displayName": "Measure Data",
            "name": "measure",
            "kind": "Measure",
            "requiredTypes": [
                {
                    "numeric": true
                }
            ]
        },
        {
            "displayName": "Line Values",
            "name": "line",
            "kind": "Measure",
            "requiredTypes": [
                {
                    "numeric": true
                }
            ]
        },
        {
            "displayName": "Dates",
            "name": "date",
            "kind": "Grouping"
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "measure": { "max": 1 },
                    "line": { "max": 1 },
                    "date": { "max": 1 }
                }
            ],
            "categorical": {
                "categories": {
                    "for": { "in": "date"}
                },
                "values": {
                    "group": {
                        "by": "grouping",
                        "select": [
                            { "bind": { "to": "measure" } },
                            { "bind": { "to": "line" } }
                        ]
                    }
                }
            }
        }
    ]
}
